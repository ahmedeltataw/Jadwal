---
interface Props {
  title: string;
  swiperBtn?:boolean;
}
const { title , swiperBtn=false } = Astro.props;
---

<div class="mainHeading mb-9 relative">
  <h2 class="fs-28 fw-500 relative round-t-6 px-8 pb-6 pt-4 d-inline-block">
    {title}
  </h2>
  {
    swiperBtn && (
    <div class="swiperBtn ">
    <div class="swiper-button-next  round-t-6"></div>
    <div class="swiper-button-prev round-t-6"></div>
  </div>
    )
  }
</div>
