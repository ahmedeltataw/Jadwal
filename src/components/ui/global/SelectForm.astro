---
interface Props {
    id: string | any;
    title?: string,
    ClassName?: string
}
const { id , title ,ClassName} = Astro.props
---
<div class={`formGroup relative mb-10 d-flex ${ClassName}`}>
    {
        title && <label for={id} class="pr-4 pb-5"> {title}</label>
    }
    <select name={id}  id={id} class="round-8 pr-5 pl-5">
        <slot />
    </select>
</div> 